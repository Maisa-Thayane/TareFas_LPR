#include <iostream>
#include <string>
using namespace std;

// Define a struct Livro com os campos solicitados
struct Livro {
    string Titulo;        // Título do livro
    string Autor;         // Nome do autor
    int AnoPublicacao;    // Ano de publicação
    int NumeroPaginas;    // Número de páginas
    double Preco;         // Preço do livro
};

int main() {
    Livro livros[3];      // Cria um array para armazenar 3 livros
    double precoTotal = 0; // Para armazenar o preço total dos livros
    int somaPaginas = 0;   // Para armazenar a soma das páginas dos livros

    // Loop para ler os dados de cada livro
    for(int i = 0; i < 3; i++) {
        cout << "Digite os dados do livro " << i + 1 << ":\n";

        cout << "Título: ";
        getline(cin >> ws, livros[i].Titulo); // Lê o título (ws remove espaços em branco no buffer)

        cout << "Autor: ";
        getline(cin, livros[i].Autor);       // Lê o nome do autor

        cout << "Ano de Publicacao: ";
        cin >> livros[i].AnoPublicacao;      // Lê o ano de publicação

        cout << "Número de páginas: ";
        cin >> livros[i].NumeroPaginas;      // Lê o número de páginas

        cout << "Preço: ";
        cin >> livros[i].Preco;              // Lê o preço do livro

        cout << endl; // Linha em branco para melhor visualização

        // Acumula o preço total e a soma das páginas
        precoTotal += livros[i].Preco;
        somaPaginas += livros[i].NumeroPaginas;
    }

    // Calcula a média de páginas
    double mediaPaginas = somaPaginas / 3.0;

    // Exibe o preço total e a média de páginas
    cout << "Preço total dos livros: R$ " << precoTotal << endl;
    cout << "Média de páginas dos livros: " << mediaPaginas << endl;

    return 0; // Encerra o programa
}
